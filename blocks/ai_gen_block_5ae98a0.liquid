{% doc %}
  @prompt
    Testimonials
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-testimonials-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-testimonials-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-testimonials-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-testimonials-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-testimonials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    padding: {{ block.settings.card_padding }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    border: {{ block.settings.card_border_thickness }}px solid {{ block.settings.card_border_color }};
    box-shadow: 0 {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-testimonial-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 4px;
    color: {{ block.settings.star_color }};
  }

  .ai-testimonial-stars-{{ ai_gen_id }} svg {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    fill: currentColor;
  }

  .ai-testimonial-quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    margin: 0;
    flex-grow: 1;
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ai-testimonial-avatar-{{ ai_gen_id }} {
    width: {{ block.settings.avatar_size }}px;
    height: {{ block.settings.avatar_size }}px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background-color: #f4f4f4;
  }

  .ai-testimonial-avatar-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-avatar-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.heading_color }};
    color: {{ block.settings.card_background }};
    font-size: {{ block.settings.avatar_size | divided_by: 2 }}px;
    font-weight: 600;
  }

  .ai-testimonial-author-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .ai-testimonial-author-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.author_name_size }}px;
    font-weight: 600;
    color: {{ block.settings.heading_color }};
    margin: 0;
  }

  .ai-testimonial-author-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.author_title_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-testimonials-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 16px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 0.8 }}px;
    }

    .ai-testimonials-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-testimonial-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<testimonials-block-{{ ai_gen_id }} class="ai-testimonials-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonials-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-testimonials-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-testimonials-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-testimonials-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-testimonials-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign quote_key = 'testimonial_' | append: i | append: '_quote'
          assign name_key = 'testimonial_' | append: i | append: '_name'
          assign title_key = 'testimonial_' | append: i | append: '_title'
          assign rating_key = 'testimonial_' | append: i | append: '_rating'
          assign image_key = 'testimonial_' | append: i | append: '_image'

          assign quote = block.settings[quote_key]
          assign name = block.settings[name_key]
          assign title = block.settings[title_key]
          assign rating = block.settings[rating_key]
          assign image = block.settings[image_key]
        %}

        {% if quote != blank or name != blank %}
          <div class="ai-testimonial-card-{{ ai_gen_id }}">
            {% if block.settings.show_stars and rating > 0 %}
              <div class="ai-testimonial-stars-{{ ai_gen_id }}">
                {% for star in (1..5) %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    {% if star <= rating %}
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    {% else %}
                      <path d="M22 9.24l-7.19-.62L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21 12 17.27 18.18 21l-1.63-7.03L22 9.24zM12 15.4l-3.76 2.27 1-4.28-3.32-2.88 4.38-.38L12 6.1l1.71 4.04 4.38.38-3.32 2.88 1 4.28L12 15.4z"/>
                    {% endif %}
                  </svg>
                {% endfor %}
              </div>
            {% endif %}

            {% if quote != blank %}
              <p class="ai-testimonial-quote-{{ ai_gen_id }}">{{ quote }}</p>
            {% endif %}

            {% if name != blank or title != blank %}
              <div class="ai-testimonial-author-{{ ai_gen_id }}">
                {% if block.settings.show_avatar %}
                  <div class="ai-testimonial-avatar-{{ ai_gen_id }}">
                    {% if image %}
                      <img
                        src="{{ image | image_url: width: 100 }}"
                        alt="{{ name | escape }}"
                        width="100"
                        height="100"
                        loading="lazy"
                      >
                    {% else %}
                      <div class="ai-testimonial-avatar-placeholder-{{ ai_gen_id }}">
                        {% if name != blank %}
                          {{ name | slice: 0 }}
                        {% else %}
                          ?
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}

                <div class="ai-testimonial-author-info-{{ ai_gen_id }}">
                  {% if name != blank %}
                    <p class="ai-testimonial-author-name-{{ ai_gen_id }}">{{ name }}</p>
                  {% endif %}
                  {% if title != blank %}
                    <p class="ai-testimonial-author-title-{{ ai_gen_id }}">{{ title }}</p>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</testimonials-block-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialsBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setAttribute('role', 'region');
        this.setAttribute('aria-label', 'Customer testimonials');
      }
    }

    customElements.define('testimonials-block-{{ ai_gen_id }}', TestimonialsBlock{{ ai_gen_id }});
  })();
</script>

