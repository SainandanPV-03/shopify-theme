{% doc %}
  @prompt
    Newsletter
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-newsletter-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-newsletter-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-newsletter-subtext-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.subtext_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  .ai-newsletter-form-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.form_width }}px;
    margin: 0 auto;
  }

  .ai-newsletter-field-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.field_gap }}px;
    margin-bottom: 12px;
  }

  .ai-newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 14px 16px;
    border: {{ block.settings.input_border_thickness }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 16px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    transition: border-color 0.2s ease;
  }

  .ai-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
    opacity: 0.7;
  }

  .ai-newsletter-input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_border_color }};
  }

  .ai-newsletter-button-{{ ai_gen_id }} {
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .ai-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-newsletter-message-{{ ai_gen_id }} {
    margin-top: 12px;
    font-size: 14px;
    line-height: 1.4;
  }

  .ai-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
  }

  .ai-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
      width: {{ block.settings.desktop_width_percent }}%;
    }

    .ai-newsletter-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-newsletter-field-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 12px;
    }

    .ai-newsletter-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-newsletter-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }
{% endstyle %}

<newsletter-form-{{ ai_gen_id }}
  class="ai-newsletter-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-newsletter-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-newsletter-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.subtext != blank %}
      <div class="ai-newsletter-subtext-{{ ai_gen_id }}">
        {{ block.settings.subtext }}
      </div>
    {% endif %}

    <div class="ai-newsletter-form-wrapper-{{ ai_gen_id }}">
      {% form 'customer', class: 'ai-newsletter-form' %}
        {% if form.posted_successfully? %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-success-{{ ai_gen_id }}">
            {{ block.settings.success_message }}
          </div>
        {% else %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="ai-newsletter-field-{{ ai_gen_id }}">
            <input
              type="email"
              name="contact[email]"
              class="ai-newsletter-input-{{ ai_gen_id }}"
              value="{{ form.email }}"
              placeholder="{{ block.settings.email_placeholder }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                aria-invalid="true"
                aria-describedby="ai-newsletter-error-{{ ai_gen_id }}"
              {% endif %}
              required
            >
            <button
              type="submit"
              class="ai-newsletter-button-{{ ai_gen_id }}"
              aria-label="{{ block.settings.button_text }}"
            >
              {{ block.settings.button_text }}
            </button>
          </div>

          {% if form.errors %}
            <div
              id="ai-newsletter-error-{{ ai_gen_id }}"
              class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-error-{{ ai_gen_id }}"
            >
              {{ form.errors.messages.email }}
            </div>
          {% endif %}
        {% endif %}
      {% endform %}
    </div>
  </div>
</newsletter-form-{{ ai_gen_id }}>

<script>
  (function() {
    class NewsletterForm{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const form = this.querySelector('form');
        if (!form) return;

        form.addEventListener('submit', this.handleSubmit.bind(this));
      }

      handleSubmit(event) {
        const emailInput = this.querySelector('input[type="email"]');
        if (emailInput && !emailInput.value.trim()) {
          event.preventDefault();
          emailInput.focus();
        }
      }
    }

    customElements.define('newsletter-form-{{ ai_gen_id }}', NewsletterForm{{ ai_gen_id }});
  })();
</script>

